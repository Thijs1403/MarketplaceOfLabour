@model TestWebApp.Models.User

@{
    Layout = "/Pages/Shared/_Register.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<head>
    <title>MOLL | Register</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,500,600,700,800" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
    <link rel="stylesheet" href="~/css/register_body.css">
    <link rel="stylesheet" href="~/css/style_index.css">
    <link href="~/css/uikit.css" rel="stylesheet" type="text/css" />
    <link href="~/css/responsive.css" rel="stylesheet" media="only screen and (max-width: 1200px)" />
    <link href="~/css/avatarupload.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').css('background-image', 'url(' + e.target.result + ')');
                    $('#imagePreview').hide();
                    $('#imagePreview').fadeIn(650);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#imageUpload").change(function () {
            readURL(this);
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () { });
    </script>
</head>
<body bgcolor="#f4f4f4">
    <div id="menu_underheader">
        <h1>Register | Please fill in your details below</h1>
    </div>

    <div id="section_form">
        <div id="rectangle">
            <div class="avatarcontainer">
                <div class="avatar-upload">
                    <div class="avatar-edit">
                        <input type='file' id="imageUpload" accept=".png, .jpg, .jpeg" />
                        <label for="imageUpload"></label>
                    </div>
                    <div class="avatar-preview">
                        <div id="imagePreview" style="background-image: url(https://png.pngtree.com/svg/20161217/avatar__181424.png);">
                        </div>
                    </div>
                </div>
            </div>



            <div class="registrationform">
                <form asp-action="Register" method="post">
                    <table>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                        </tr>
                        <tr>
                            <td>
                                &nbsp;<label for="frst"><b></b></label>
                                <input asp-for="FirstName" type="text" placeholder="First Name" name="firstname" minlength="3" maxlength="50" accept-charset="ISO-8859-1" pattern="[^0-9\x22]+" required />
                            </td>
                            <td>
                                &nbsp;<label for="lst"><b></b></label>
                                <input asp-for="LastName" type="text" placeholder="Last Name" name="lastname" minlength="3" maxlength="50" accept-charset="ISO-8859-1" pattern="[^0-9\x22]+" required />
                            </td>
                        </tr>
                        <tr>
                            <th>Email Address</th>
                            <th>Enter Password</th>
                        </tr>
                        <tr>
                            <td>
                                &nbsp;<label for="email"><b></b></label>
                                <input asp-for="Email" type="email" placeholder="Email Address" name="email" pattern="a-z0-9._%+-]+a-z0-9.-]+\.[a-z]{2,3}$" title="Email must follow following example: example.example.com" required />
                            </td>

                            <td>
                                &nbsp;<label for="password"><b></b></label>
                                <input asp-for="Password" type="password" placeholder="Enter Password" name="password" minlength="4" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{4,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 4 or more characters." oninput="document.getElementById('confirm').pattern = this.value.replace(/[\-\[\]\/\{\}\(\)\*\+\?\.\\\^\$\|]/g, '\\$&')" required />
                            </td>
                        </tr>
                        <tr>
                            <th>Nickname</th>
                            <th>Repeat Password</th>
                        </tr>
                        <tr>
                            <td>
                                &nbsp;<label for="nick"><b></b></label>
                                <input asp-for="UserName" type="text" placeholder="Nickname" name="username" minlength="3" maxlength="25" pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{1,20}$*" required />
                            </td>
                            <td>
                                &nbsp;<label for="repeat"><b></b></label>
                                <input type="password" id="confirm" name="confirm" pattern="" placeholder="Repeat Password" title="Password must be same as previously entered." required />
                            </td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <th>Zip Code</th>
                        </tr>
                        <tr>
                            <td>
                                &nbsp;<label for="adres"><b></b></label>
                                <input asp-for="Adres" type="text" placeholder="Address" name="adres" minlength="3" maxlength="60" pattern="(?=.*\d)(?=.*[a-z]).{3,}" title="Must contain a streetname and a number like 'Bieslook 17'" required />
                            </td>
                            <td>
                                &nbsp;<label for="zipcode"><b></b></label>
                                <input asp-for="ZipCode" type="text" placeholder="Zip Code" title="Zip-code must follow standard rules. Example: 1234 AB" pattern="[1-9][0-9]{3}\s?[a-zA-Z]{2}" required />
                            </td>
                        </tr>
                        <tr>
                            <th>Date of Birth (DD/MM/YYYY)</th>
                            <th>Select Gender</th>
                        </tr>
                        <tr>
                            <td class="datumkleur">
                                &nbsp;<label class="datefield" for="date"><b></b></label>
                                <input asp-for="DOB" id="datefield" type="date" min='1900-01-01' max='2000-13-13' placeholder="Date of Birth (DD/MM/YYYY)" name="dob" pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" required />
                                <script type="text/javascript">
                                    var today = new Date();
                                    var dd = today.getDate();
                                    var mm = today.getMonth() + 1; //January is 0!
                                    var yyyy = today.getFullYear();
                                    if (dd < 10) {
                                        dd = '0' + dd
                                    }
                                    if (mm < 10) {
                                        mm = '0' + mm
                                    }
                                    today = yyyy + '-' + mm + '-' + dd;
                                    document.getElementById("datefield").setAttribute("max", today);
                                </script>
                            </td>
                            <td>
                                <select asp-for="GenderValue" name="gendervalue" required>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">I prefer not to say</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <th align="left">Phone Number</th>
                            <th></th>
                        </tr>
                        <tr>
                            <td>
                                &nbsp;
                                <label for="phone"><b></b></label>
                                <input type="tel" placeholder="Phone Number" id="phone" name="phone" pattern="[0-9]{10}" title="A phone number must consist of 10 numbers" required /><br><br>
                            </td>

                            <td>
                                <button>SIGN UP</button>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
